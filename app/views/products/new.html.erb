<div>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-4">
        <%= form_with model: @product do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control", placeholder:"Product name ..." %>
          </div>
          <div class="form-group">
            <%= f.label :price %>
            <%= f.text_field :price, class: "form-control",placeholder:"Product name ..." %>
          </div>
          <div class="form-group pb-3">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control",rows:"4",placeholder:"Description ..." %>
          </div>
          <%= f.submit%>
        <%end%>
      </div>
    </div>
  </div>
</div>