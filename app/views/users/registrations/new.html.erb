<style>
  body{
  background-color: #f5f5f5;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6 set-cred-page">
      <h2 class="text-center ">Sign Up</h2>
      <div class="horizontal-rule"></div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group ">
          <%= f.label :username %>
          <%= f.text_field :username, class:"form-control txt-bx-shadow" %>
          <% if @user.errors[:username].any? %>
            <div class="text-danger">
              <%= @user.errors[:username].first %>
            </div>
          <% end %>
        </div>
        <div class="form-group ">
          <%= f.label :email %>
          <%= f.email_field :email, class:"form-control txt-bx-shadow" %>
          <% if @user.errors[:email].any? %>
            <div class="text-danger">
              <%= @user.errors[:email].first %>
            </div>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control txt-bx-shadow" %>
          <% if @user.errors[:password].any? %>
            <div class="text-danger">
              <%= @user.errors[:password].first %>
            </div>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control  txt-bx-shadow" %>
          <% if @user.errors[:password_confirmation].any? %>
            <div class="text-danger ">
              <%= @user.errors[:password_confirmation].first %>
            </div>
          <% end %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class:"btn-submit form-control mb-2 mt-3" %>
        </div>
      <% end %>
      <p class="login-cred">
        Already have an account?
        <%= render "users/shared/links"  %>
      </p>
    </div>
  </div>
</div>
<%= render "partials/footer" %>
