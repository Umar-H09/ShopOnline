<style>
  body{
  background-color: #f5f5f5;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6 set-cred-page ">
      <h2 class="text-center ">Login</h2>
      <div class="horizontal-rule mb-4"></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group ">
          <%= f.label :email %>
          <%= f.email_field :email, class:"form-control txt-bx-shadow" , placeholder:"user@example.com" , required:"true"%>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control txt-bx-shadow",required:"true" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me , required:"true"%>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Login", class:"btn-submit form-control mb-2 mt-3 bg-light" %>
        </div>
      <% end %>
      <p class="login-cred login-bottom-format">
        Don't have an account?
        <%= render "users/shared/links"  %>
      </p>
    </div>
  </div>
</div>
<%= render "partials/footer" %>
