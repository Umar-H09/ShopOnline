<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= render 'partials/cart' %>
    </div>
    <div class="col-md-6">
      <%= form_with model: @order do |f| %>
        <%if !current_user %>
          <h3>Contact Information</h3>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control", placeholder:"Email ..." %>
          </div>
          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-control", placeholder:"Name ..." %>
          </div>
          <div class="form-check">
            <input type="checkbox" id="toggle">
            Create Account
            <div class="control-me">
              <div class="row">
                <div class="col-6">
                  <div class="form-group">
                    <%= f.label :password %>
                    <%= f.text_field :password,type:"password", class: "form-control", placeholder:"Password ..." %>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-group">
                    <%= f.label :password_confirmation %>
                    <%= f.text_field :password_confirmation,type:"password", class: "form-control",placeholder:"Password Confirmation ..." %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <%end%>
        <h3>Shipping Address</h3>
        <div class="form-group">
          <%= f.label :adress %>
          <%= f.text_field :adress, class: "form-control", placeholder:"Delivery address ..." %>
        </div>
        <div class="form-group">
          <%= f.label :country %>
          <%= f.text_field :country, class: "form-control", placeholder:"Country..." %>
        </div>
        <div class="form-group">
          <%= f.label :state %>
          <%= f.text_field :state, class: "form-control", placeholder:"State..." %>
        </div>
        <div class="form-group">
          <%= f.label :city %>
          <%= f.text_field :city, class: "form-control", placeholder:"City..." %>
        </div>
        <div class="form-group">
          <%= f.label :area %>
          <%= f.text_field :area, class: "form-control", placeholder:"Area..." %>
        </div>
        <div class="form-group">
          <%= f.label :zip_code %>
          <%= f.text_field :zip_code, class: "form-control", placeholder:"Zip-Code..." %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class: "form-control",placeholder:"Contact number ..." %>
        </div>
        <%= f.submit 'Place Order', class:'btn btn-danger d-block mx-auto'%>
      <%end%>
    </div>
  </div>
</div>
