<%= render "partials/header" %>
<div>
  <div class="container pt-5">
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-4">
        <%= form_with model: @product do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control", placeholder:"Product name ..." %>
          </div>
          <div class="form-group">
            <%= f.label :price %>
            <%= f.text_field :price, class: "form-control",placeholder:"Product name ..." %>
          </div>
          <div class="form-group">
            <%= f.label :quantity %>
            <%= f.text_field :quantity, class: "form-control",placeholder:"Product quantity ..." %>
          </div>
          <div class="form-group">
            <%= f.label :Image %>
            <%= f.file_field :avatar, class: "form-control"%>
          </div>
          <div class="form-group pb-3">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control",rows:"4",placeholder:"Description ..." %>
          </div>
          <%= f.submit class:'btn btn-danger d-block mx-auto'%>
        <%end%>
      </div>
    </div>
  </div>
</div>