<style>
  body{
  background-color: #f5f5f5;
  }
</style>
<div>
  <div class="container pt-5">
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-4">
        <%= form_with model: @product do |f| %>
          <div class="form-group">
            <%= f.label :title ,class:"label-set"%>
            <%= f.text_field :title, class: "mb-3 input-lg custom-height form-control input-lg", placeholder:"Product name ..." %>
          </div>
          <div class="form-group">
            <%= f.label :price ,class:"label-set" %>
            <%= f.text_field :price, class: "mb-3 input-lg custom-height form-control",placeholder:"Product price ..." %>
          </div>
          <div class="form-group">
            <%= f.label :quantity,class:"label-set" %>
            <%= f.text_field :quantity, class: "mb-3 input-lg custom-height form-control",placeholder:"Product quantity ..." %>
          </div>
          <div class="form-group">
            <%= f.label :Image,class:"label-set" %>
            <%= f.file_field :avatar, class: "mb-3 input-lg  form-control"%>
          </div>
          <div class="form-group pb-3">
            <%= f.label :description,class:"label-set" %>
            <%= f.text_area :description, class: "form-control",rows:"4",placeholder:"Description ..." %>
          </div>
          <%= f.submit class:'btn btn-danger d-block mx-auto'%>
        <%end%>
      </div>
    </div>
  </div>
</div>