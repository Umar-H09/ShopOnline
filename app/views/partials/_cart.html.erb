<%= turbo_frame_tag "cart" do %>
  <h4 class="pt-4">Shopping Cart</h4>
  <% if @cart.orderables.count > 0 %>
    <%= render "partials/orderables" %>
    <hr>
    <p>Total: <%= @cart.total%></p>
    <% if flash[:alert] %>
      <div class="alert alert-danger text-center p-2 mb-0" role="alert" id="show">
        <%= flash[:alert] %>
      </div>
    <% end %>
  <%else %>
    <p>Your cart is empty</p>
  <%end%>
<%end%>
