<%= link_to "New Product", new_product_path, class: "nav-link new-product-link  fw-bold text-end" %>
<table class="table table-striped border">
  <thead>
    <tr class="tbl-bg">
      <th scope="col" class="text-center">Name</th>
      <th scope="col" class="text-center">Price</th>
      <th scope="col" class="text-center">Quantity</th>
      <th scope="col" class="text-center">Image</th>
      <th scope="col" class="text-center">Detail</th>
      <th scope="col" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |f| %>
      <tr>
        <td class="text-center align-middle"><%= f.title %></td>
        <td class="text-center align-middle"><%= f.price %></td>
        <td class="text-center align-middle"><%= f.quantity %></td>
        <td class="text-center align-middle"><%= image_tag f.avatar ,width:"70px"%></td>
        <td class="text-center align-middle"><%= f.description %></td>
        <td class="text-center align-middle"><%= link_to "View" ,product_path(f) ,class:"text-decoration-none px-2 edit-clr" %> <%= link_to "Edit" ,edit_product_path(f) ,class:"text-decoration-none px-2 edit-clr" %>
          <%= link_to "Delete" ,product_path(f),class:"text-decoration-none edit-clr", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
